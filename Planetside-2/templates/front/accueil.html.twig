{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur l'accueil
{% endblock %}

{% block body %}

	<h1 class="text-center my-5">Page d'accueil</h1>

	<div class="row text-center d-flex justify-content-around">
		{% for tag in tags %}
			<div class="col-3 my-5 mx-3">

					<img class="img-fluid" src="{{asset('images/' ~ tag.image)}}" alt="icone diverses">

				<div class="mt-3"><a class="stretched-link" href="{{ relative_path(tag.path) }}">{{tag.nom}}</a></div>

			</div>
		{% endfor %}
	</div>
{% endblock %}
